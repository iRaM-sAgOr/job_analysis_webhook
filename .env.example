# Environment variable configuration for the FastAPI job analysis application

# API_KEY: Your API key for accessing external services (e.g., LLM provider)
API_KEY=your_api_key_here
LLM_PROVIDER=
LLM_API_KEY=
LLM_MODEL_NAME=

# DATABASE_URL: Connection string for the database (e.g., PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost/dbname

# SECRET_KEY: A secret key for securing sessions and tokens
SECRET_KEY=your_secret_key_here

# DEBUG: Set to True for development, False for production
DEBUG=True

# ALLOWED_HOSTS: Comma-separated list of allowed hosts for the application
ALLOWED_HOSTS=localhost,127.0.0.1

# WEBHOOK_SECRET: A secret key for validating incoming webhook requests
WEBHOOK_SECRET=your_webhook_secret_here